{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "Simple typescript starter for projects",
  "main": "index.js",
  "repository": "git@github.com:kevinppaulo/typescript-starter.git",
  "author": "Kevin Paulo <kevinppaulo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "start": "ts-node src/index.ts",
    "build": "webpack ./src/",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.json",
    "lint-and-fix": "eslint . --ext .ts,.tsx,.js,.jsx,.json --fix",
    "prettier-format": "prettier --config .prettierrc '**/*.{json,js,jsx,ts,tsx,css,scss,md}' --write && git add -A .",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-loader": "^9.2.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.2.4",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0",
    "webpack-node-externals": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
